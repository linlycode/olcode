{
	"extends": [
		"tslint:recommended",
		"tslint-react",
		"tslint-config-prettier"
	],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts"
		]
	},
	"rules": {
		"eofline": true,
		"no-trailing-whitespace": true,
		"linebreak-style": [
			true,
			"LF"
		],
		"indent": [
			true,
			"tabs",
			2
		],
		"semicolon": [
			true,
			"never"
		],
		"interface-name": false,
		// TODO: remove this rule
		"no-console": false
	}
}
